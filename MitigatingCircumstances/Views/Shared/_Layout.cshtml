<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SupportHub - @ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

    <environment include="Development,Staging,Production">
        <link rel="stylesheet" href="~/vendor.min.css" asp-append-version="true" />
    </environment>
</head>
<body>

    <partial name="~/Views/Shared/Partials/_Header.cshtml" />

    <div class="container body-content">
        @RenderBody()
    </div>

    <environment include="Development,Staging,Production">
        <script src="~/vendor.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>